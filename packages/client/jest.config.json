{
  "preset": "jest-preset-angular",
  "rootDir": "../..",
  "displayName": "client",
  "setupTestFrameworkScriptFile": "<rootDir>/packages/client/setupJest.ts",
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/cypress/"
  ],
  "testMatch": [
    "<rootDir>/packages/client/__tests__/**/*.(spec|test).ts"
  ],
  "testEnvironment": "jsdom",
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.client.json"
    }
  }
}
