{
  "preset": "ts-jest",
  "rootDir": "../..",
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/cypress/"
  ],
  "testMatch": [
    "<rootDir>/packages/client/__tests__/**/*.(spec|test).tsx"
  ],
  "testEnvironment": "jsdom",
  "snapshotSerializers": [
    "enzyme-to-json"
  ]
}
