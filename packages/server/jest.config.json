{
  "preset": "ts-jest",
  "rootDir": "./",
  "displayName": "server",
  "modulePathIgnorePatterns": [
    "../../dist/",
    "../..<rootDir>/cypress/"
  ],
  "testMatch": [
    "<rootDir>/__tests__/**/*.(spec|test).ts"
  ],
  "setupTestFrameworkScriptFile": "./__tests__/utils/setup.ts",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.server.json"
    }
  }
}
