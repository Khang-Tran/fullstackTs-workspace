{
  "rulesDirectory": [
    "codelyzer"
  ],
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "ordered-imports": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "import-name": false,
    "directive-selector": [
        true,
        "attribute",
        "app",
        "camelCase"
      ],
    "component-selector": [
        true,
        "element",
        "app",
        "kebab-case"
    ],
    "variable-name": false
  }
}
